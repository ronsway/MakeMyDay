{
  "name": "parentflow-poc",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "description": "ParentFlow - Hebrew language parent communication system that automatically parses school messages and converts them into structured tasks and events",
  "author": "Ron Lederer <ronled@gmail.com>",
  "contributors": [
    {
      "name": "Dana Tchetchik",
      "role": "Product Manager"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ronsway/MakeMyDay.git"
  },
  "homepage": "https://github.com/ronsway/MakeMyDay#readme",
  "bugs": {
    "url": "https://github.com/ronsway/MakeMyDay/issues"
  },
  "keywords": [
    "hebrew",
    "nlp",
    "parent-communication",
    "school-messages",
    "task-management",
    "rtl",
    "react",
    "typescript"
  ],
  "scripts": {
    "dev:web": "cross-env VITE_APP_VERSION=1.1.0 vite --host",
    "dev:api": "tsx server/api.ts",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build": "cross-env VITE_APP_VERSION=1.1.0 vite build",
    "version:check": "tsx scripts/version-check.ts",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:push": "prisma db push",
    "test": "vitest run",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "run_all.bat",
    "start:ps": "powershell -ExecutionPolicy Bypass -File ./run_all.ps1",
    "start:clean": "powershell -ExecutionPolicy Bypass -File ./run_all.ps1 -CleanOnly"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@prisma/client": "^5.20.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "fastify": "^4.28.1",
    "framer-motion": "^12.23.24",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.545.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.15",
    "react": "^18.2.0",
    "react-datepicker": "^8.7.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.65.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.0.0",
    "react-image-crop": "^11.0.10",
    "react-router-dom": "^7.9.4",
    "tsx": "^4.19.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^22.5.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.16",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.5.6",
    "prisma": "^5.20.0",
    "tailwindcss": "^4.1.14",
    "vite": "^5.2.0",
    "vitest": "^2.1.1"
  }
}
